<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_25sdp"
    android:layout_marginHorizontal="@dimen/_40sdp"
    android:background="@drawable/img_bg_alert_dialouge">
    <TextView
        android:id="@+id/tv_are_you_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Recipe\nMania "
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/gilroy_bold"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_des_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Search your favourite recipe in Categories &amp; try the mouth watering Recipes"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/gilroy_light"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_are_you_sure"/>

    <Button
        android:id="@+id/btn_cancel_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_close"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/gilroy_bold"
        android:background="@drawable/bg_cancel_alert_dialouge"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_des_alert"/>
</androidx.constraintlayout.widget.ConstraintLayout>